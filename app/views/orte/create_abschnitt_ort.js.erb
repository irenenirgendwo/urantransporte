if ('<%=@abschnitt_ort_typ %>' == 'Start'){
  setup_start_ort_wahl('<%=@ort.id %>','<%= @ort.name %>');
  $("#ortModal-Start").hide();
  $('body').removeClass('modal-open');
  $('.modal-backdrop').remove();
} else {
  setup_ziel_ort_wahl('<%=@ort.id %>','<%= @ort.name %>');
  $("#ortModal-Ziel").hide();
  $('body').removeClass('modal-open');
  $('.modal-backdrop').remove();
}

