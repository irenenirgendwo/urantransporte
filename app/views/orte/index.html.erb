<h1>
  Orte
  <div class="btn-group header-buttons">
    <%= link_to 'Lösche ungenutzte Orte', orte_bereinige_path, method: :bereinige, data: { confirm: 'Willst du die Orte wirklich löschen?' }, class: "btn btn-danger" %>
    <%= link_to 'Neuer Ort', new_ort_path, class: "btn btn-success" %>
  </div>
</h1>

<div class="row">

  <div class="col-sm-3">
  
    <%= form_tag({action: :search}, multipart: true) do %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Ort suchen</h3>
        </div>
        <div class=panel-body>
          <div class="form-group">
            <%= label_tag :name, "Name" %>
            <%= text_field_tag :name, "", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :plz, "PLZ" %>
            <%= text_field_tag :plz, "", class: "form-control" %>
          </div>
          <%= submit_tag "Passende Orte anzeigen", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    
  </div>
  
  <div class="col-sm-9">
    
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>PLZ</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @orte.each do |ort| %>
          <tr>
            <td><%= link_to ort.name, ort %></td>
            <td><%= ort.plz %></td>
            <td class="table-actions">
              <%= link_to edit_ort_path(ort) do
                render 'text_edit'
              end %>
              <%= link_to ort, method: :delete, data: { confirm: 'Willst du den Ort wirklich löschen?' } do
                render 'text_remove'
              end%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
  
  
  
</div>
