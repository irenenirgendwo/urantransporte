<h1>
  Transporte
  <div class="btn-group header-buttons">
    <%= link_to 'Neuer Transport', new_transport_path, class: "btn btn-success" %>
  </div>
</h1>

<div class="row">

  <div class="col-sm-3">
  
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Stoff</h3>
      </div>
      <ul class="list-group">
        <%= link_to "Alle", transporte_path , class: params[:stoff]==nil ? "list-group-item active":"list-group-item" %>
        <% @stoffe.each do |stoff, stoff_id| %>
          <% if params[:stoff].to_i == stoff_id %>
            <%= link_to stoff, transporte_path(:stoff => stoff_id), class: "list-group-item active" %>
          <% else %>
            <%= link_to stoff, transporte_path(:stoff => stoff_id), class: "list-group-item" %>
          <% end %>
        <% end %>
      </ul>
    </div>
    
  </div>
  
  <div class="col-sm-9">
    <%= render 'tabelle' %>
    <% unless @transporte.empty? %>
      <%= will_paginate @transporte %>
    <% end %>
    
  </div>
  
</div>
