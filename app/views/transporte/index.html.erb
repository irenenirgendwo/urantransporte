<h1>Listing transporte</h1>

<table>
  <thead>
    <tr>
      <th>Menge</th>
      <th>Stoff</th>
      <th>Behaeltertyp</th>
      <th>Start</th>
      <th>Ziel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transporte.each do |transport| %>
      <tr>
        <td><%= transport.menge %></td>
        <td><%= transport.stoff %></td>
        <td><%= transport.behaeltertyp %></td>
        <td><%= transport.start %></td>
        <td><%= transport.ziel %></td>
        <td><%= link_to 'Show', transport %></td>
        <td><%= link_to 'Edit', edit_transport_path(transport) %></td>
        <td><%= link_to 'Destroy', transport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

