<h1>Listing umschlaege</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @umschlaege.each do |umschlag| %>
      <tr>
        <td><%= link_to 'Show', umschlag %></td>
        <td><%= link_to 'Edit', edit_umschlag_path(umschlag) %></td>
        <td><%= link_to 'Destroy', umschlag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

