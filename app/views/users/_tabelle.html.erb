<table class="table table-striped">
  <tbody>
  
    <% users.each do |user| %>
      <tr>
        <td><span class="glyphicon glyphicon-user"></span> <%= link_to user.name, user %></td>
        <td><%= user.email %></td> 
        <td>
          <%= link_to edit_user_path(user) do %>
            <span class="glyphicon glyphicon-edit"></span> Bearbeiten
          <% end %>
        </td>
        <td>
          <%= link_to( user, method: :delete, data: { confirm: 'Willst du den Benutzer wirklich löschen?' } ) do %>
            <span class="glyphicon glyphicon-remove"></span> Löschen
          <% end %>
        </td>
      </tr>
    <% end %>
    
  </tbody>
</table>
