<h1>Listing beobachtungen</h1>

<table>
  <thead>
    <tr>
      <th>Beschreibung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beobachtungen.each do |beobachtung| %>
      <tr>
        <td><%= beobachtung.beschreibung %></td>
        <td><%= link_to 'Show', beobachtung %></td>
        <td><%= link_to 'Edit', edit_beobachtung_path(beobachtung) %></td>
        <td><%= link_to 'Destroy', beobachtung, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

