<%= form_for(@beobachtung) do |f| %>
  <% if @beobachtung.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@beobachtung.errors.count, "error") %> prohibited this beobachtung from being saved:</h2>

      <ul>
      <% @beobachtung.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <div class="panel panel-default" id="mapedit" >
    <div class="panel-heading">
          <h2 class="panel-title">Eckdaten</h2>
    </div>
    <div class="panel-body">
      
      <div class="row">
        <div class="col-sm-6">
          
          <div class="form-group">
            Standort bei der Beobachtung (z.B. Stadt oder Geokoordinaten): <br>
            <%= f.text_field :ort, placeholder:"z.B. Hamburg", class: "form-control"  %><br>
            Klicke auf die Karte, um den Standort genau einzutragen.
          </div>
  
          <div class="form-group">
            Fahrtrichtung des Transports (z.B. Himmelsrichtung oder nächste Ortschaft):<br>
            <%= f.text_field :fahrtrichtung, placeholder:"z.B. Süden oder Buchholz", class: "form-control" %>
          </div>
          
          
              <!--Javascript: Datum von abfahrts-zeit automatisch setzen bei veraenderung ankunfts_datum -->
              <div class="form-group">
                Ankunftszeit:
                <%= f.datetime_select(:ankunft_zeit, start_year:1990) %>
              </div>
            
              <div class="form-group">
                Abfahrtszeit:
                <%= f.datetime_select :abfahrt_zeit, start_year:1990 %>
              </div>
            
       
          
          
        </div>
        <div class="col-sm-6">

          <input type="text" name="search" placeholder="Hier zukünftig suchen" id="search" class="form-control">
            <%= f.hidden_field :lat, class: "form-control" %>
            <%= f.hidden_field :lon, class: "form-control" %>
            
          <div id="map" style="height: 300px;"></div>
          <script>
            geomap('beobachtung');
          </script> 
        </div>
      </div>
    </div>
        
        
        
  </div>
       
  <div class="panel panel-default" id="mapedit" >
    <div class="panel-heading">
          <h2 class="panel-title">Kennzeichnung</h2>
    </div>    
    <div class="panel-body">   
        <div class="form-group">

          
          <%= f.check_box :kennzeichen_radioaktiv %> 
          <%= image_tag "radioaktiv.jpg", alt: "radioaktiv", size: "70x70", id: "radioaktiv_kennzeichen" %>
          
          <%= f.check_box :kennzeichen_aetzend %>
          <%= image_tag "aetzend.jpg", alt: "ätzend", size: "70x70" %>

          <%= f.check_box :kennzeichen_spaltbar %>
          <%= image_tag "spaltbar.jpg", alt: "spaltbar", size: "70x70" %>

          <%= f.check_box :kennzeichen_umweltgefaehrdend %>
          <%= image_tag "umweltgefaehrdend.jpg", alt: "umweltgefährdend", size: "70x70" %>
        </div>
        <strong>Orange Gefahrguttafel:</strong>
        <div class="form-group">
          <div class="row">
            <div class="col-sm-4">
              Obere Nummer (zweistellig):
              <%= f.text_field :gefahr_nummer, placeholder:"z.B. 78", class: "form-control" %>
            </div>
            <div class="col-sm-4">
              Untere Nummer (vierstellig):
              <%= f.text_field :un_nummer, placeholder:"z.B. 2978", class: "form-control" %>
            </div>
            <div class="col-sm-4">
              Beispiel:
              <%= render "stoffe/gefahr_tafel", gefahr_nummer: "78", un_nummer: "2978" %>
            </div>
          </div>
        </div>
    </div>   
  </div>
  
  <div class="panel panel-default">
    <div class="panel-heading">
          <h2 class="panel-title">Verkehrsmittel</h2>
    </div>    
    <div class="panel-body"> 
      <div class="field">
          Verkehrsmittel: 
          <%= f.select :verkehrstraeger, options_for_select(VERKEHRSTRAEGER_COMBOBOX, "unbekannt"), 
             class: "form-control" %><br>
          Bitte vor der Beschreibung angeben.
      </div>
    </div>
  </div>
  
  
  <div class="panel panel-default" >
    <div class="panel-heading">
          <h2 class="panel-title">Beschreibung</h2>
    </div>    
    <div class="panel-body"> 
      <div class="row">
        <div class="col-sm-9">
          <div class="form-group">
            Beschreibung der Container / Ladung (Farbe, Größe, Logos, Form, Gestelle, Container-Nummern):<br>
            <%= f.text_area :container_beschreibung, placeholder:"z.B. zylinderförmige graue Behälter, füllen Container nicht aus", class: "form-control" %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            Anzahl Container: <br>
            <%= f.number_field :anzahl_container, placeholder:1, class: "form-control", min:0 %>
          </div>
        </div>
        
       
      <script type="text/javascript">
        verkehrsmittel_wahl()
      </script>
      
      </div>
        
        <div class="beobachtung_zug">
          <div class="field">
            Beschreibung der Lok (Farbe, Aufschriften, Nummer, Eisenbahngesellschaft, Diesel oder elektrisch)
            <%= f.text_field :lok_beschreibung, placeholder:"z.B. dunkelrot mit weißen Streifen, BE-24", class: "form-control" %>
          </div>
        </div>
        
        <div class="beobachtung_zug">
          <div class="field">
            Beschreibung des Zuges (z.B. welche Wagen kommen im ganzen Zug vor, in welcher Reihenfolge, wo sind die Uranwagen positioniert,
            gibt es Graffiti, wie viele Waggons hat der Zug?)
            <%= f.text_area :zug_beschreibung, 
                placeholder:"z.B. die Uranwaggons kommen zuerst, dahinter ca. 30 Kesselwagen mit Gefahrgut, dann einige Waggons mit Holz", 
                class: "form-control" %>
          </div>
        </div>
        <div class="beobachtung_lkw">
          <div class="field">
            Anzahl LKW:<br>
            <%= f.number_field :anzahl_lkw, placeholer: 1, class: "form-control", min:0 %>
          </div>
          <div class="field">
            Auto-Kennzeichen der LKW:
            <%= f.text_field :kennzeichen_lkw, class: "form-control" %>
          </div>
          <div class="field">
            Beschreibung des LKW (Fahrgestell, Farbe, Aufschrift):
            <%= f.text_area :lkw_beschreibung, placeholder:"z.B. grüner LKW mit Auflieger", class: "form-control" %>
          </div>
        </div>
        <div class="beobachtung_schiff">
          <div class="field">
            Schiffsname: <br>
            <%= f.text_field :schiff_name, class: "form-control" %>
          </div>
          <div class="field">
            Beschreibung des Schiffs (Größe, Aussehen, ...):
            <%= f.text_area :schiff_beschreibung, placeholder:"z.B. ca. 200m lang, rote Außenwand, nur 3 Container an Deck", class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group">
          Transportfirma (Aufschrift der Reederei, Spedition, Bahnunternehmen):<br>
          <%= f.text_field :firma_beschreibung, placeholder:"z.B. Kieserling", class: "form-control" %>
        </div>
      </div>
  </div>
        
  <div class="panel panel-default" >
    <div class="panel-heading">
          <h2 class="panel-title">Begleitumstände</h2>
    </div>    
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-4">  
                 
            <div class="field">     
              <%= f.check_box :polizei %> Polizei
            </div>
            <div class="field">
              <%= f.check_box :hubschrauber %> Polizeihubschrauber
            </div>
        </div>
         <div class="col-sm-8">  
                 
            <div class="field">     
              Weitere Beschreibung:
              <%= f.text_area :begleitung_beschreibung, class: "form-control" %>
            </div>
        </div>
      </div>
        
    </div>
  </div>
  <div class="panel panel-default" >
    <div class="panel-heading">
          <h2 class="panel-title">Foto und Kontakt (freiwillig)</h2>
    </div>    
    <div class="panel-body">       
        
        <div class="field">
          <%= f.check_box :foto %> Foto gemacht? (Nach der Eingabe der Beobachtung können Sie das Foto hochladen.)
        </div>
        <div class="field">
          E-Mail-Adresse für Nachfragen (freiwillige Angabe):
          <%= f.text_field :email %>
        </div>
    </div>
  </div>
        <div class="actions">
          <%= f.submit %>
        </div>
<% end %>
