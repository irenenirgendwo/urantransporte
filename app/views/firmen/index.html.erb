<div class="btn-group header-buttons">
  <%= link_to 'Neue Transportfirma', new_firma_path, class: "btn btn-success" %>
</div>

<h1>Transportfirmen</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Adresse</th>
      <th>Plz</th>
      <th>Ort</th>
      <th>Beschreibung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @firmen.each do |firma| %>
      <tr>
        <td><%= link_to firma.name, firma %></td>
        <td><%= firma.adresse %></td>
        <td><%= firma.plz %></td>
        <td><%= firma.ort %></td>
        <td><%= firma.beschreibung %></td>
        <td><%= link_to 'Show', firma %></td>
        <td><%= link_to 'Bearbeiten', edit_firma_path(firma) %></td>
        <td><%= link_to 'LÃ¶schen', firma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>