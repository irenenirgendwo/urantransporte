<h1>
  Transportfirmen
  <% if is_editor? %>
    <div class="btn-group header-buttons">
      <%= link_to 'Neue Transportfirma', new_firma_path, class: "btn btn-success" %>
    </div>
  <% end %>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Beschreibung</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @firmen.each do |firma| %>
      <tr>
        <td><%= link_to firma.name, firma %></td>
        <td><%= firma.beschreibung %></td>
        <td>
          <% if firma.reederei %>
            <span class="badge">Reederei</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>