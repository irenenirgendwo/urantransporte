<%= form_for(@anlage) do |f| %>

  <%= render 'layouts/objekt_error_messages', objekt: @anlage %>
  
  <%= hidden_field_tag :redirect_params, @redirect_params %>

  <div class="row">
  
    <div class="col-sm-7">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Anlagendaten</h2>
        </div>
        <div class="panel-body">
          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :beschreibung %><br>
            <%= f.text_area :beschreibung, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :anlagen_kategorie, "Anlagenkategorie" %><br>
            <%= collection_select(:anlage, :anlagen_kategorie_id, AnlagenKategorie.all, :id, :name, @kategorie_options, class: "form-control") %>
          </div>
        </div>
      </div>
      
       <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Bild</h2>
        </div>
        <div class="panel-body">
          <p>Hier kann ein Link zu einem Bild der Anlage angegeben werden.
          <div class="form-group">
            <%= f.label :bild_url, "URL zur Bild-Datei" %><br>
            <%= f.text_field :bild_url, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :bild_urheber, "Urheber*innen-Angabe" %><br>
            <%= f.text_field :bild_urheber, class: "form-control" %>
          </div>
        </div>
      </div>
      
    </div>
    
    <div class="col-sm-5">

      <!-- TODO: noch auf ort.lat/ort.lon umstellen ?-->
      <%= render "orte/ort_eingabe", titel: "Standort", ort: @anlage.ort %>
      
    </div>
 
  </div>
  
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
    <%= link_to 'Abbrechen', @anlage, class: "btn btn-danger" %>
  </div>
<% end %>
