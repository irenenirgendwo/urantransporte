<div class="btn-group header-buttons">
  <%= link_to 'Neue Atomanlage', new_anlage_path, class: "btn btn-success" %>
</div>

<h1>Atomanlagen</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ort</th>
      <th>Beschreibung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @anlagen.each do |anlage| %>
      <tr>
        <td><%= link_to anlage.name, anlage %></td>
        <td><%= anlage.ort %></td>
        <td><%= anlage.beschreibung %></td>
        <% if is_editor? %>
          <td><%= link_to 'Bearbeiten', edit_anlage_path(anlage) %></td>
          <td><%= link_to 'Löschen', anlage, method: :delete, data: { confirm: 'Möchtest du die Atomanlage wirklich löschen?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>