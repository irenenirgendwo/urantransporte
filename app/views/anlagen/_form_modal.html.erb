<%= form_for(@anlage) do |f| %>

  <div class="modal fade" id="anlagenModal" tabindex="-1" role="dialog" aria-labelledby="anlagenModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Schlie√üen</span></button>
          <h4 class="modal-title">Atomanlage erstellen</h4>
        </div>
        
        <div class="modal-body">
          <%= hidden_field_tag :redirect_params, @redirect_params %>
          <% if @anlage.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@anlage.errors.count, "error") %> prohibited this anlage from being saved:</h2>
              <ul>
              <% @anlage.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :name, "Name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :anlagen_kategorie, "Typ" %>
            <%= collection_select(:anlage, :anlagen_kategorie_id, AnlagenKategorie.all, :id, :name, {}, class: "form-control") %>
          </div>
          <div class="form-group">
            <%= f.label :ort, "Ort (optional)" %>
            <%= f.text_field :ort, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :beschreibung, "Beschreibung (optional)" %>
            <%= f.text_area :beschreibung, class: "form-control" %>
          </div>
        </div>
        
        <%= hidden_field_tag :synonym, @synonym %>
    
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
          <%= f.submit class: "btn btn-success" %>
        </div>
      
      </div>
    </div>
  </div>
  
<% end %>
