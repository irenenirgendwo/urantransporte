<%= form_for(@schiff) do |f| %>

  <div class="form-group">
    <%= f.label :name, "Name" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :imo, "IMO-Nummer" %><br>
    <%= f.text_field :imo, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :vesselfinder_url, "Vesselfinder-URL" %><br>
    <%= f.text_field :vesselfinder_url, class: "form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
    
<% end %>
